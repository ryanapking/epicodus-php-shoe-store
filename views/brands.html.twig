{% include 'header.html' %}

<!DOCTYPE html>
<html>
    <head>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href='/css/styles.css' rel='stylesheet' type='text/css'>
        <title>Shoes: All Brands</title>
    </head>
    <body>
        <div class='container'>
            <div class='row'>
                <div class='col col-sm-6'>
                    <h2>All Brands:</h2>
                    {% if brands is not empty %}
                        <ul>
                            {% for brand in brands %}
                                <li><a href='/brand/{{ brand.getId }}'>{{ brand.getName }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <div class='col col-sm-6'>
                    <h2>Add a new brand:</h2>
                    <form action='/brands' method='post' class='form well'>
                        <div class='form-group'>
                            <label for='brand_name'>Enter the new brand's name:</label>
                            <input type='text' class='form-control' name='brand_name' id='brand_name' placeholder='new brand name'>
                            <br>
                            <button type='submit' class='btn btn-primary'>Add brand</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
